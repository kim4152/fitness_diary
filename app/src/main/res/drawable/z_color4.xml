<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <layer-list>
            <item>
                <shape xmlns:android="http://schemas.android.com/apk/res/android"
                    android:shape="oval">

                    <solid android:color="#FFB6C1" />
                    <size
                        android:width="48dp"
                        android:height="48dp" />
                </shape>
            </item>
            <item android:drawable="@drawable/ic_baseline_check_24" android:top="4dp" android:right="4dp" android:bottom="4dp" android:left="4dp"/>
        </layer-list>
    </item>
    <item android:state_checked="false">
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="oval">

            <solid android:color="#FFB6C1" />
            <size
                android:width="48dp"
                android:height="48dp" />
        </shape>
    </item>
</selector>