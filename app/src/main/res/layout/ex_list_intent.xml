<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="ex"
            type="com.diary.fitness_diary.ExListIntent" />
    </data>
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <EditText
        android:layout_marginTop="20dp"
        android:id="@+id/search_ex"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="찾으시는 운동을 검색해보세요."
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginHorizontal="20dp"
        />
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/subCons"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    app:layout_constraintTop_toBottomOf="@+id/search_ex">
    <androidx.appcompat.widget.AppCompatImageButton
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:id="@+id/star_ex"
        android:onClick="@{ex::onStartClick}"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="10dp"
        android:src="@drawable/ic_baseline_star_border_24"
        android:backgroundTint="@color/transparent"
        />
    <com.google.android.material.button.MaterialButton
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:id="@+id/gkcp"
        app:layout_constraintStart_toEndOf="@+id/star_ex"
        android:layout_marginLeft="5dp"
        android:text="하체"
        app:cornerRadius="20dp"
        app:strokeWidth="1dp"
        app:strokeColor="@android:color/darker_gray"
        style="@style/button"
        android:onClick="@{ex::onClickgkcp}"
        />
    <com.google.android.material.button.MaterialButton
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:id="@+id/rktma"
        app:layout_constraintStart_toEndOf="@+id/gkcp"
        android:layout_marginLeft="5dp"
        android:text="가슴"
        app:cornerRadius="20dp"
        app:strokeWidth="1dp"
        app:strokeColor="@android:color/darker_gray"
        style="@style/button"
        android:onClick="@{ex::onClickrktma}"/>
    <com.google.android.material.button.MaterialButton
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:id="@+id/emd"
        app:layout_constraintStart_toEndOf="@+id/rktma"
        android:layout_marginLeft="5dp"
        android:text="등"
        app:cornerRadius="20dp"
        app:strokeWidth="1dp"
        app:strokeColor="@android:color/darker_gray"
        style="@style/button"
        android:onClick="@{ex::onClickemd}"/>
    <com.google.android.material.button.MaterialButton
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:id="@+id/djRo"
        app:layout_constraintStart_toEndOf="@+id/emd"
        android:layout_marginLeft="5dp"
        android:text="어깨"
        app:cornerRadius="20dp"
        app:strokeWidth="1dp"
        app:strokeColor="@android:color/darker_gray"
        style="@style/button"
        android:onClick="@{ex::onClickdjRo}"/>
    <com.google.android.material.button.MaterialButton
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:id="@+id/vkf"
        app:layout_constraintStart_toEndOf="@+id/djRo"
        android:layout_marginLeft="5dp"
        android:text="팔"
        app:cornerRadius="20dp"
        app:strokeWidth="1dp"
        app:strokeColor="@android:color/darker_gray"
        style="@style/button"
        android:onClick="@{ex::onClickvkf}"/>
</androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/exListIntent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/subCons"
        tools:listitem="@layout/recycler_view_item_1">

    </androidx.recyclerview.widget.RecyclerView>

</androidx.constraintlayout.widget.ConstraintLayout>
</layout>